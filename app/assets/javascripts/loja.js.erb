

$(function () {
	var counter = 2;
	$(".2, .3, .4").hide();
	setInterval(mudaImg, 5000);

	function mudaImg() {

		if (counter == 5) {
			$("1, .2, .3, .4").hide();
			counter = 1;
		} else {	
			$(".".concat(counter)).show();
			$('button').css('background', 'gold');
			$("button[data=\"".concat(counter, "\"]")).css('background', 'silver');
			counter++;
		}
	}

	$("button").click(function() {

		$(".1, .2, .3, .4").hide();
		var e = $(this).attr("data");
		$(".".concat(e)).show();
		$('button').css('background', 'gold');
		$(this).css('background', 'silver');
		counter = e;

	});

});
