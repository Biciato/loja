<!DOCTYPE html>
<html>
  <head>
    <title>Loja Online Games</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all',
     'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application',
    'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name %>"">
    <div id="banner">
      <%= image_tag 'logo.jpg', alt: "Catálogo de Games" %>
      <span class="titulo"><%= @titulo_pagina %></span>
    </div>
    <div id="columns">
      <div id="side">
        <div id="carrinho">
          <% if @carrinho %>
            <%= esconda_div_se(@carrinho.linha_items.empty?,
                  id: 'carrinho') do %>
              <%= render @carrinho %>
            <% end %>
          <% end %>
        </div>
        <ul>
          <li><a href="http://www...."><%= t('.home') %></a></li>
          <li><a href="http://www..../faq"><%= t('.questions') %></a></li>
          <li><a href="http://www..../novidades"><%= t('.news') %></a></li>
          <li><a href="http://www..../contato"><%= t('.contact') %></a></li>
        </ul>
        <% if session[:usuario_id] %>
          <ul>
            <li><%= link_to 'Pedidos',  pedidos_path  %>
            <li><%= link_to 'Produtos', produtos_path %>
            <li><%= link_to 'Usuários', usuarios_path %>
          </ul>
          <%= button_to 'Logout', logout_path, method: :delete %>
        <% end %>
      </div>
      <div id="main">
        <%= yield %>
      </div>
  </body>
</html>
