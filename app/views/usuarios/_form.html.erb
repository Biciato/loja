<div class="loja_form">

<%= form_for @usuario do |form| %>
  <% if usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "error") %>
        Esse usuário é proibido de ser salvo:</h2>
      <ul>
      <% @usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <legend>Entre seus detalhes</legend>

  <div class="field">
    <%= form.label :nome, 'Nome: ' %>
    <%= form.text_field :nome, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :password, 'Password:' %>
    <%= form.password_field :password, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, 'Confirme:' %>
    <%= form.password_field :password_confirmation, size: 40 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  </fieldset>
<% end %>

</div>
